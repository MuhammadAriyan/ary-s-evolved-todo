# Backend Environment Configuration
# Copy this file to .env and fill in the values

# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/dbname
# Example for Neon: postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
# For production, add your frontend domain: https://yourdomain.com

# Application Settings
APP_ENV=development
# Options: development, staging, production

LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# APScheduler Configuration
SCHEDULER_TIMEZONE=UTC
SCHEDULER_JOB_DEFAULTS_COALESCE=false
SCHEDULER_JOB_DEFAULTS_MAX_INSTANCES=3

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true
# Set RELOAD=false in production

# Better Auth Configuration (shared with frontend)
BETTER_AUTH_SECRET=your-better-auth-secret-key-change-this
BETTER_AUTH_URL=http://localhost:3000
# For production: https://yourdomain.com
